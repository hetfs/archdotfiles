{
  "$schema": "https://raw.githubusercontent.com/sumneko/vscode-lua/master/setting/schema.json",

  // ==========================================================
  // ‚öôÔ∏è Runtime Configuration
  // ==========================================================
  "runtime": {
    "version": "LuaJIT",
    "pathStrict": true
  },

  // ==========================================================
  // üß† Workspace Configuration
  // ==========================================================
  "workspace": {
    "library": [
      "$VIMRUNTIME/lua",
      "$VIMRUNTIME/lua/vim/lsp",
      "$PWD/lua",
      "${3rd}/luv/library",
      "$DEPS_PATH/luvit-meta/library"{{DEPS}}
    ],
    "ignoreDir": ["/lua"],
    "checkThirdParty": false
  }
}
